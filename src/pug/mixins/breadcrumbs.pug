mixin breadcrumbs(levels, mod)
  .breadcrumbs-block__container&attributes(attributes).site-content-container
    div(class=`breadcrumbs-block ${mod ? mod : ''}`)
      each item, index in levels

        - var count = index+1
        - var name = item[0]
        - var link = item[1] || null

        if link
          .breadcrumbs-block__item
            a.breadcrumbs-block__item-link.page-hover-effect(href=link) #{name}
        else
          .breadcrumbs-block__item
            span
              | #{name}
        //- для иконки между ссылкой
        if count < levels.length
          span.breadcrumbs-block__arrow

